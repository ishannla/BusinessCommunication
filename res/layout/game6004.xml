<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
      android:background="#FF1919" >

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroup1"
        android:layout_marginLeft="59dp"
        android:layout_marginTop="129dp"
        android:layout_toRightOf="@+id/radioGroup1" >
    </RadioGroup>

    <Button
        android:id="@+id/buttonAnswer2001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Show Answer" 
        android:background="#33b5e5"/>

    <TextView
        android:id="@+id/answer2001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonAnswer2001"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp"
        android:text="Answer = B"
        android:textSize="20sp"
          android:textColor="#FFFFFF"   />

    <RadioGroup
        android:id="@+id/radioGroup3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <RadioButton
            android:id="@+id/game64a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A: The flag at the station is at half-staff."
              android:textColor="#FFCC00"
            android:onClick="onRadioButtonClicked" />

        <RadioButton
            android:id="@+id/game64b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B: The flag at our the school is at half-staff."
              android:textColor="#FFCC00"
            android:onClick="onRadioButtonClicked" />

        <RadioButton
            android:id="@+id/game64c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C: The flag on the ship is at half-staff."
              android:textColor="#FFCC00"
            android:onClick="onRadioButtonClicked" />
         <RadioButton
            android:id="@+id/game64d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D: The flag at our school is at half-mast." 
              android:textColor="#FFCC00"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroup1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="Select the correct use of half-staff or half-mast below."
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
          android:textColor="#FFFFFF"  />

</RelativeLayout>