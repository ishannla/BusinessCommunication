<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >

  

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:src="@drawable/fblahome" />

        <Button
            android:id="@+id/studyButton"
            android:layout_width="170sp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
             android:text="Navigate to Study Guide"
            android:textColor="#FFFFFF"
            android:background="#FF1919" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:text="-function as a statement from the company"
            android:textColor="#660066"
            android:textSize="17sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/noviceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView01"
            android:layout_centerHorizontal="true"
            android:text="Business Communication has many uses:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:text="Business Communication"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FF0000"
            android:textSize="27sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/helpButton"
            android:layout_width="170sp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/studyButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="12dp"
            android:text="Get Assistance Button"
            android:textColor="#FFFFFF"
            android:background="#FF1919" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/noviceText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:text="-promote a product, service, or organization"
            android:textColor="#660066"
            android:textColorHint="#663399"
            android:textSize="17sp"
            android:textStyle="italic" />

    </RelativeLayout>

